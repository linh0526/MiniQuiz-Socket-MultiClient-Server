{
  "name": "quiz-game",
  "version": "1.0.0",
  "description": "Multiplayer Quiz Game with Socket.io",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "cd client && npm test",
    "lint": "cd client && npm run lint && cd ../server && npm run lint",
    "clean": "rm -rf client/node_modules server/node_modules node_modules",
    "setup": "npm run install-all"
  },
  "keywords": [
    "quiz",
    "multiplayer",
    "socket.io",
    "react",
    "node.js",
    "real-time",
    "game",
    "websocket"
  ],
  "author": "Quiz Game Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quiz-game.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/quiz-game/issues"
  },
  "homepage": "https://github.com/your-username/quiz-game#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
